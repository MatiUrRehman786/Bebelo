<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buzzware.bebelo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BebloAppApp">
        <activity android:name=".Activities.EditBar" />
        <activity android:name=".Activities.BarProfile" />
        <activity android:name=".Activities.AddBar" />
        <activity
            android:name=".Activities.ClaimBar"
            android:theme="@style/Theme.BebloAppLightGray" />
        <activity android:name=".Activities.BarDetail" />
        <activity android:name=".Activities.BarLogin" />
        <activity android:name=".Activities.FirstScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Home" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>