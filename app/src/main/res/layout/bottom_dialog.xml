<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:background="@drawable/rounder_corner_whitep"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/myBarCalinBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
                <LinearLayout
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/rightArrowIV"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/you_bar_icon"
                        android:layout_gravity="center"/>

                    <TextView
                        android:fontFamily="@font/cabin_regular"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Is this your bar? Claim bar"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                </LinearLayout>

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/rightArrowIV"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/flagDataBtn"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/rightArrowIV"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
                <ImageView
                    android:id="@+id/flagIV"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/flag"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/flagTV"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flag that data is wrong"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:layout_marginLeft="@dimen/_10sdp"/>
            </LinearLayout>

            <TextView
                android:fontFamily="@font/cabin_regular"
                android:id="@+id/btnClose"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rounder_button_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="Close"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/light_black1">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>