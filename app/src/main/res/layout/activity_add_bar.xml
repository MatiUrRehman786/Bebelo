<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddBar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/appBar"
            layout="@layout/add_bar_app_bar" />

        <ScrollView
            android:layout_below="@+id/appBar"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/backgroundColor"
                android:orientation="vertical"
                android:layout_below="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:fontFamily="@font/cabin_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bar info"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:fontFamily="@font/cabin_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/cabin_regular"
                                android:text="Bar name"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal">


                            </TextView>

                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@android:color/transparent"
                                    android:fontFamily="@font/cabin_regular"
                                    android:hint="@string/type_here"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="normal" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_gray"
                                    android:layout_alignParentBottom="true"/>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/cabin_regular"
                                android:text="Bar Address"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal">

                            </TextView>

                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/locationTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@android:color/transparent"
                                    android:fontFamily="@font/cabin_regular"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="Select Location"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="normal" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_gray"
                                    android:layout_alignParentBottom="true"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:fontFamily="@font/cabin_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drink prices"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:fontFamily="@font/cabin_regular"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(you can add more later)"
                            android:textColor="@color/black"
                            android:textStyle="normal" />
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp">
                            <LinearLayout
                                android:layout_toLeftOf="@+id/amountLay1"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/tanquaray_small"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/cabin_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tanqueray"
                                    android:textColor="@color/black"
                                    android:textStyle="normal"
                                    android:textSize="@dimen/_14sdp"/>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:id="@+id/amountLay1"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/rect_light_gray"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_25sdp">
                                <TextView
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/cabin_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="€"
                                    android:gravity="end"
                                    android:textColor="@color/black"
                                    android:textStyle="normal"
                                    android:textSize="@dimen/_10sdp"/>
                            </RelativeLayout>

                            <View
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/light_grayy"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp">
                            <LinearLayout
                                android:layout_toLeftOf="@+id/amountLay2"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/beefeater_small"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/cabin_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Beefeater"
                                    android:textColor="@color/black"
                                    android:textStyle="normal"
                                    android:textSize="@dimen/_14sdp"/>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:id="@+id/amountLay2"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/rect_light_gray"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_25sdp">
                                <TextView
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/cabin_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="€"
                                    android:gravity="end"
                                    android:textColor="@color/black"
                                    android:textStyle="normal"
                                    android:textSize="@dimen/_10sdp"/>
                            </RelativeLayout>

                            <View
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/light_grayy"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp">
                            <LinearLayout
                                android:layout_toLeftOf="@+id/amountLay3"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/brugal_small" />

                                <TextView
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/cabin_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Brugal Anejo"
                                    android:textColor="@color/black"
                                    android:textStyle="normal"
                                    android:textSize="@dimen/_14sdp"/>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:id="@+id/amountLay3"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/rect_light_gray"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_25sdp">
                                <TextView
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/cabin_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="€"
                                    android:gravity="end"
                                    android:textColor="@color/black"
                                    android:textStyle="normal"
                                    android:textSize="@dimen/_10sdp"/>
                            </RelativeLayout>

                            <View
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/light_grayy"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:background="@drawable/doted_rect"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp">
                    <LinearLayout
                        android:id="@+id/infoLay"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/image_select"/>

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Add a photo of your bar \n(optional)"
                            android:fontFamily="@font/cabin_regular"
                            android:layout_centerInParent="true"
                            android:textStyle="normal"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_10sdp"/>
                    </LinearLayout>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:riv_corner_radius="@dimen/_10sdp"
                        android:layout_margin="@dimen/_5sdp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Only Show"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/cabin_regular"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:id="@+id/barWithTerraceRL"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">
                        <RelativeLayout
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">
                            <LinearLayout
                                android:layout_marginRight="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/barWithTerraceTV"
                                    android:fontFamily="@font/cabin_bold"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bars with terraces"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <CheckBox
                                android:id="@+id/barWithTerraceCB"
                                style="@style/CheckboxStyle"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_10sdp"/>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/roofTopRL"
                        android:background="@color/greenish_blue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">
                        <RelativeLayout
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">
                            <LinearLayout
                                android:layout_marginRight="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/roofTopTV"

                                    android:fontFamily="@font/cabin_bold"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rooftops"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                            <CheckBox
                                android:id="@+id/roofTopCB"
                                style="@style/CheckboxStyle"
                                android:checked="true"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_10sdp"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:fontFamily="@font/cabin_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact info"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/cabin_regular"
                                android:text="Your name"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp">
                            </TextView>

                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@android:color/transparent"
                                    android:fontFamily="@font/cabin_regular"
                                    android:hint="@string/type_here"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="normal" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_gray"
                                    android:layout_alignParentBottom="true"/>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/cabin_regular"
                                android:text="Phone no."
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp">
                            </TextView>

                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@android:color/transparent"
                                    android:fontFamily="@font/cabin_regular"
                                    android:hint="@string/type_here"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="normal" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_gray"
                                    android:layout_alignParentBottom="true"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/cabin_regular"
                                android:text="Email"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp">

                            </TextView>

                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <EditText
                                    android:hint="@string/type_here"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@android:color/transparent"
                                    android:fontFamily="@font/cabin_regular"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="normal"
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    android:inputType="text"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_gray"
                                    android:layout_alignParentBottom="true"/>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/cabin_regular"
                                android:text="Password"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp">

                            </TextView>

                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@android:color/transparent"
                                    android:fontFamily="@font/cabin_regular"
                                    android:hint="@string/type_here"
                                    android:inputType="textPassword"
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="normal" />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_gray"
                                    android:layout_alignParentBottom="true"/>

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_width="match_parent"
