<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/dayNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_medium"
            android:text="dayName"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <EditText
            android:id="@+id/startTimeET"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/rect_light_gray"
            android:fontFamily="@font/cabin_regular"
            android:gravity="center"
            android:hint="00:00"
            android:imeOptions="actionDone"
            android:textCursorDrawable="@drawable/cursor_black"
            android:inputType="number"
            android:maxLines="1"
            android:padding="@dimen/_3sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp"
            android:textStyle="normal"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/endTimeET"
            app:layout_constraintEnd_toStartOf="@id/endTimeET"
            app:layout_constraintTop_toTopOf="@id/endTimeET" />


        <EditText
            android:id="@+id/endTimeET"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/rect_light_gray"
            android:fontFamily="@font/cabin_regular"
            android:gravity="center"
            android:hint="00:00"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/cursor_black"
            android:padding="@dimen/_3sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp"
            android:textStyle="normal"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/button"
            app:layout_constraintEnd_toStartOf="@id/button"
            app:layout_constraintTop_toTopOf="@id/button" />


        <ImageView
            android:id="@+id/button"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/green_plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>